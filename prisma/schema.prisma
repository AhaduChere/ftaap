generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

/**
 * Students table
 * - grade: free-form (e.g., "9", "A", "Senior") — change to enum later if you have a fixed set.
 * - attendancePct: integer 0–100 (percent present). Rename or change type if you track days instead.
 */
model Student {
  id            Int      @id @default(autoincrement())
  firstName     String
  lastName      String
  grade         String
  attendancePct Int       @default(0)
  teacher       String
  email         String    @unique

  dibelsScore   Int       @default(0)  

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

